# =============================================================================
# DIY Humanoid Configurator - Frontend Environment Variables
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:3001/api
VITE_API_VERSION=v1

# =============================================================================
# PAYMENT CONFIGURATION - PUBLIC KEYS ONLY
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here
VITE_PAYPAL_ENVIRONMENT=sandbox

# =============================================================================
# APP CONFIGURATION
# =============================================================================
VITE_APP_NAME="DIY Humanoid Configurator"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Build Your Custom Humanoid Robot"
VITE_APP_URL=http://localhost:5173

# =============================================================================
# FEATURES FLAGS
# =============================================================================
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_AI_MANUAL=true
VITE_ENABLE_LIVE_PRICES=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_DEBUG_MODE=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VITE_DEFAULT_CURRENCY=EUR
VITE_SUPPORTED_CURRENCIES=EUR,USD,GBP,CHF
VITE_DEFAULT_LANGUAGE=de
VITE_SUPPORTED_LANGUAGES=de,en

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""
VITE_ENABLE_ERROR_REPORTING=false