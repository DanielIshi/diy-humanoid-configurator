# =============================================================================
# DIY Humanoid Configurator - Frontend Production Environment
# =============================================================================

# =============================================================================
# API CONFIGURATION - PRODUCTION
# =============================================================================
VITE_API_URL=https://api.diy-humanoid-configurator.com/api
VITE_API_VERSION=v1

# =============================================================================
# PAYMENT CONFIGURATION - LIVE KEYS
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
VITE_PAYPAL_CLIENT_ID=your_live_paypal_client_id
VITE_PAYPAL_ENVIRONMENT=production

# =============================================================================
# APP CONFIGURATION - PRODUCTION
# =============================================================================
VITE_APP_NAME="DIY Humanoid Configurator"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Build Your Custom Humanoid Robot"
VITE_APP_URL=https://diy-humanoid-configurator.com

# =============================================================================
# FEATURES FLAGS - PRODUCTION
# =============================================================================
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_AI_MANUAL=true
VITE_ENABLE_LIVE_PRICES=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_DEBUG_MODE=false

# =============================================================================
# UI CONFIGURATION - PRODUCTION
# =============================================================================
VITE_DEFAULT_CURRENCY=EUR
VITE_SUPPORTED_CURRENCIES=EUR,USD,GBP,CHF
VITE_DEFAULT_LANGUAGE=de
VITE_SUPPORTED_LANGUAGES=de,en

# =============================================================================
# DEVELOPMENT CONFIGURATION - DISABLED
# =============================================================================
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_HOT_RELOAD=false

# =============================================================================
# ANALYTICS & MONITORING - PRODUCTION
# =============================================================================
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VITE_ENABLE_ERROR_REPORTING=true

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_STRICT_MODE=true