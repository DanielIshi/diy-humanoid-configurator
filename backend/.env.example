# =============================================================================
# DIY Humanoid Configurator - Backend Environment Variables
# =============================================================================
# Kopiere diese Datei zu .env und f√ºlle die Werte aus
# WICHTIG: .env Dateien niemals in Git committen!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/humanoid_configurator"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="your-super-secure-jwt-secret-key-here-change-in-production"
JWT_EXPIRES_IN="7d"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:5173"
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret_here"
PAYPAL_ENVIRONMENT="sandbox"  # "sandbox" oder "production"
PAYPAL_WEBHOOK_ID="your_paypal_webhook_id_here"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-here"
EMAIL_FROM="noreply@diy-humanoid-configurator.com"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
ERROR_LOG_FILE="./logs/error.log"

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
MOCK_PAYMENT_SERVICE="false"
MOCK_EMAIL_SERVICE="true"
DEBUG_SQL_QUERIES="false"