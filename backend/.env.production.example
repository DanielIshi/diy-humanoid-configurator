# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://produser:securepwd@prod-db-host:5432/humanoid_configurator_prod"
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="extremely-secure-production-jwt-secret-256-bit-random"
JWT_EXPIRES_IN="2h"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="production"
PORT=3001
FRONTEND_URL="https://diy-humanoid-configurator.com"
CORS_ORIGIN="https://diy-humanoid-configurator.com,https://www.diy-humanoid-configurator.com"

# =============================================================================
# PAYMENT INTEGRATION - LIVE KEYS
# =============================================================================
# Stripe Production Configuration
STRIPE_PUBLISHABLE_KEY="pk_live_your_live_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_live_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_live_stripe_webhook_secret"

# PayPal Production Configuration
PAYPAL_CLIENT_ID="your_live_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_live_paypal_client_secret"
PAYPAL_ENVIRONMENT="production"
PAYPAL_WEBHOOK_ID="your_live_paypal_webhook_id"
PAYPAL_RECEIVER_EMAIL="payments@diy-humanoid-configurator.com"

# Enhanced Payment Features - Stricter Limits
PAYMENT_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_WINDOW=900000
WEBHOOK_RATE_LIMIT_MAX=200
WEBHOOK_RATE_LIMIT_WINDOW=60000

# =============================================================================
# AI SERVICES - PRODUCTION KEYS
# =============================================================================
OPENAI_API_KEY="sk-live_openai_api_key_for_production"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=3500

# Live Pricing Services
CMC_API_KEY="live_coinmarketcap_pro_api_key"
EXCHANGE_RATE_API_KEY="live_exchange_rate_api_key"
PRICE_UPDATE_INTERVAL=60000

# =============================================================================
# EMAIL CONFIGURATION - PRODUCTION SMTP
# =============================================================================
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_SECURE="true"
SMTP_USER="apikey"
SMTP_PASS="your_sendgrid_api_key"
EMAIL_FROM="noreply@diy-humanoid-configurator.com"

# =============================================================================
# LOGGING & MONITORING - PRODUCTION
# =============================================================================
LOG_LEVEL="warn"
LOG_FILE="/var/log/diy-humanoid/app.log"
ERROR_LOG_FILE="/var/log/diy-humanoid/error.log"
ENABLE_REQUEST_LOGGING="false"

# =============================================================================
# SECURITY & PERFORMANCE - PRODUCTION
# =============================================================================
TRUST_PROXY="true"
HELMET_CSP_ENABLED="true"
RATE_LIMIT_ENABLED="true"
SESSION_SECURE="true"
COOKIE_SECURE="true"

# Health Check & Monitoring
HEALTH_CHECK_ENABLED="true"
METRICS_ENABLED="true"
APM_SERVICE_NAME="diy-humanoid-backend"

# =============================================================================
# DEVELOPMENT & TESTING - DISABLED IN PRODUCTION
# =============================================================================
MOCK_PAYMENT_SERVICE="false"
MOCK_EMAIL_SERVICE="false"
DEBUG_SQL_QUERIES="false"
ENABLE_SWAGGER_UI="false"