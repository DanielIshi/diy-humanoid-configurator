# =============================================================================
# DIY Humanoid Configurator - Environment Variables Example
# =============================================================================
# Kopiere diese Datei zu .env und fülle die Werte aus
# WICHTIG: .env Dateien niemals in Git committen!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL="postgresql://username:password@localhost:5432/humanoid_configurator"

# Development Database URL (optional, für lokale Entwicklung)
DEV_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/humanoid_configurator_dev"

# Test Database URL (optional, für Tests)
TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/humanoid_configurator_test"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Key (mindestens 256-bit, zufällig generiert)
# Generiere mit: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-key-here-change-in-production"

# JWT Token Expiration
JWT_EXPIRES_IN="7d"

# Password Reset Token Expiration
PASSWORD_RESET_EXPIRES="1h"

# Session Secret für Express Sessions (falls verwendet)
SESSION_SECRET="your-session-secret-here"

# Encryption Key für sensitive Daten (256-bit)
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data-here"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend Server Configuration
NODE_ENV="development"
PORT=3001

# Frontend URL (für CORS und Redirects)
FRONTEND_URL="http://localhost:5173"
ADMIN_URL="http://localhost:5174"

# CORS Origins (komma-separiert)
CORS_ORIGIN="http://localhost:5173,http://localhost:5174"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 Minuten
RATE_LIMIT_MAX=1000          # Max Requests pro Window

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret_here"
PAYPAL_ENVIRONMENT="sandbox"  # "sandbox" oder "production"

# SEPA Configuration (falls implementiert)
SEPA_CREDITOR_ID="your_sepa_creditor_id"
SEPA_CREDITOR_NAME="Your Company Name"

# =============================================================================
# AI SERVICES (OPTIONAL)
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY="sk-your_openai_api_key_here"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MAX_TOKENS=1000

# OpenRouter Configuration (Alternative zu OpenAI)
OPENROUTER_API_KEY="sk-or-your_openrouter_key_here"
OPENROUTER_MODEL="openai/gpt-3.5-turbo"

# Text-to-Speech Configuration
TTS_SERVICE="openai"  # "openai", "elevenlabs", oder "local"
TTS_VOICE="alloy"     # OpenAI Voice

# Embedding Model für Suche/Empfehlungen (optional)
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration für E-Mail-Versand
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE="false"  # true für 465, false für andere ports
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password-here"

# E-Mail Sender Information
EMAIL_FROM="noreply@diy-humanoid-configurator.com"
EMAIL_FROM_NAME="DIY Humanoid Configurator"

# E-Mail Templates
RESET_PASSWORD_URL="http://localhost:5173/reset-password"
VERIFY_EMAIL_URL="http://localhost:5173/verify-email"

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
# Local File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Allowed File Types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_BUCKET_NAME="diy-humanoid-uploads"
AWS_REGION="eu-central-1"

# Cloudinary (alternative für Images)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# =============================================================================
# CACHING & REDIS (OPTIONAL)
# =============================================================================
# Redis Configuration für Caching
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Session Storage Redis (optional)
REDIS_SESSION_URL="redis://localhost:6379/1"

# Cache TTL Settings (in seconds)
CACHE_TTL_SHORT=300      # 5 Minuten
CACHE_TTL_MEDIUM=3600    # 1 Stunde
CACHE_TTL_LONG=86400     # 1 Tag

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL="info"

# Log File Paths
LOG_FILE="./logs/app.log"
ERROR_LOG_FILE="./logs/error.log"
SECURITY_LOG_FILE="./logs/security.log"

# External Monitoring (optional)
SENTRY_DSN="your_sentry_dsn_here"

# Performance Monitoring
NEW_RELIC_LICENSE_KEY="your_new_relic_key"

# =============================================================================
# EXTERNAL APIs & INTEGRATIONS
# =============================================================================
# Supplier APIs für Preise und Verfügbarkeit
REICHELT_API_KEY="your_reichelt_api_key"
CONRAD_API_KEY="your_conrad_api_key"
WELECTRON_API_KEY="your_welectron_api_key"

# Shipping APIs
DHL_API_KEY="your_dhl_api_key"
HERMES_API_KEY="your_hermes_api_key"

# Currency Exchange API (für Multi-Currency)
EXCHANGE_RATES_API_KEY="your_exchange_rates_key"

# Google Services
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
GOOGLE_MAPS_API_KEY="your_google_maps_key"

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Diese Variablen werden mit VITE_ Prefix an das Frontend weitergegeben

# API Configuration
VITE_API_URL="http://localhost:3001/api"
VITE_WS_URL="ws://localhost:3001"
VITE_APP_ENV="development"

# Feature Flags
VITE_ENABLE_LLM_ADVISOR="true"
VITE_ENABLE_AUDIO_GUIDES="true"
VITE_ENABLE_3D_PREVIEW="false"
VITE_ENABLE_COMMUNITY_FEATURES="false"
VITE_ENABLE_ANALYTICS="true"

# Payment Public Keys
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"

# UI Configuration
VITE_DEFAULT_CURRENCY="EUR"
VITE_DEFAULT_LANGUAGE="de"
VITE_THEME_DEFAULT="light"

# PWA Configuration
VITE_PWA_ENABLED="true"
VITE_APP_NAME="DIY Humanoid Configurator"
VITE_APP_SHORT_NAME="DIY Robot"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Default Pricing Configuration
DEFAULT_MARGIN_PERCENT=45.0
MINIMUM_MARGIN_PERCENT=10.0
MAXIMUM_MARGIN_PERCENT=200.0

# Tax Configuration
TAX_RATE=19.0  # MwSt. in Deutschland
INCLUDE_TAX_IN_PRICES="false"

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=50.00
DEFAULT_SHIPPING_COST=9.99

# Order Configuration
ORDER_PREFIX="ORD"
INVOICE_PREFIX="INV"

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Database Seeding
SEED_DATABASE="true"
SEED_ADMIN_EMAIL="admin@localhost"
SEED_ADMIN_PASSWORD="admin123"

# Testing Configuration
TEST_USER_EMAIL="test@example.com"
TEST_USER_PASSWORD="testpass123"

# Mock Services (für Tests)
MOCK_PAYMENT_SERVICE="false"
MOCK_EMAIL_SERVICE="true"
MOCK_AI_SERVICE="false"

# Debug Options
DEBUG_SQL_QUERIES="false"
DEBUG_API_RESPONSES="false"
VERBOSE_LOGGING="false"

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================
# Diese Variablen nur in Production setzen

# Security Headers
FORCE_HTTPS="true"
HSTS_MAX_AGE="31536000"
CSP_REPORT_URI="https://your-csp-report-endpoint"

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000

# Production Monitoring
HEALTH_CHECK_ENABLED="true"
METRICS_ENABLED="true"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Täglich um 2 Uhr
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# Vercel Deployment
VERCEL_URL=""  # Automatisch gesetzt von Vercel
VERCEL_ENV=""  # preview, development, production

# Railway Deployment
RAILWAY_ENVIRONMENT=""  # production, staging
RAILWAY_PROJECT_ID=""
RAILWAY_SERVICE_ID=""

# Docker Configuration
CONTAINER_PORT=3001
DOCKER_HEALTH_CHECK_INTERVAL="30s"

# =============================================================================
# NOTES & DOCUMENTATION
# =============================================================================
#
# SICHERHEITSHINWEISE:
# 1. Niemals .env Dateien in Git committen
# 2. Produktive Keys regelmäßig rotieren
# 3. Entwicklungs- und Produktionskeys getrennt halten
# 4. Starke Passwörter und Secrets verwenden
# 5. Umgebungsvariablen in Production verschlüsselt speichern
#
# SETUP-REIHENFOLGE:
# 1. Diese Datei zu .env kopieren
# 2. Alle notwendigen Werte ausfüllen
# 3. Datenbank erstellen und migrieren
# 4. Services testen
# 5. Entwicklungsserver starten
#
# HILFE:
# - Dokumentation: README.md
# - API Docs: API.md
# - Architektur: ARCHITECTURE.md
# - Security: SECURITY.md
